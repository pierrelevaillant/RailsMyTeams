<% content_for :title, t("users.sessions.title") %>
<div class="large-6 large-centered columns">
  <div class="login-box">
    <h1 class="text-center"><%= t("users.sessions.title") %></h1><br>
    <div class="row">
      <div class="large-12 columns">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
         <div class="large-12 columns">
          <%= f.email_field :email, autofocus: true, placeholder: t("users.shared.placeholder_email") %>
        </div>
      </div>
      <div class="row">
       <div class="large-12 columns">
        <%= f.password_field :password, autocomplete: "off",  placeholder: t("users.shared.placeholder_password") %>
      </div>
    </div>
    <div class="row">

      <div class="large-12 large-centered columns">
        <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
        <% end -%>
        <%= f.submit t("users.shared.log_in"), :class => "button expand radius small success" %>
      </div>
    </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>
</div>
</div>
